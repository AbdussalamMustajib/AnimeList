<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:src="@drawable/foto_3_produk"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:textStyle="bold"
            android:text="Sengoku Basara 2"
            android:textSize="24dp"/>
        <ImageView
            android:id="@+id/imgStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/img"
            android:src="@drawable/foto_3_produk"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgStar"
            android:layout_alignBottom="@id/imgStar"
            android:layout_toEndOf="@id/imgStar"
            android:text="0.0 / 5.0"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/imgDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_below="@id/imgStar"
            android:layout_toEndOf="@id/img"
            android:src="@drawable/foto_3_produk"/>


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgDate"
            android:layout_alignBottom="@id/imgDate"
            android:layout_toEndOf="@id/imgDate"
            android:text="20-09-2015"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/imgDate"
            android:layout_toEndOf="@id/img"
            android:text="Lorem Ipsum Dolor SIt AMet Lorem Ipsum Dolor SIt AMet Lorem Ipsum Dolor SIt AMet Lorem Ipsum Dolor SIt AMe"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>